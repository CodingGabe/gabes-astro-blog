---

import { getCollection } from "astro:content";
import Layout from '../layouts/Layout.astro';
import PostList from '../components/PostList.astro';
import Sidebar from '../components/Sidebar.astro';

const posts = await getCollection("posts");
const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/CodingGabe', icon: './images/github-alt.svg' },
  { name: 'Instagram', url: 'https://instagram.com/creative.gabe', icon: './images/instagram-alt.svg' },
  { name: 'LinkedIn', url: 'https://linkedin.com/in/gabeamaya', icon: './images/linkedin.svg' },
];
---

<section id="main-content" class="flex lg:mt-16 max-sm:pb-10">
    <div class="content-wrapper grid gap-x-7 max-w-5xl px-4 mx-auto">
        <PostList posts={posts}/>
        <Sidebar sidebarTitle="Lets get Connected!" socialLinks={socialLinks} />
    </div>
</section>

<style>
    .content-wrapper {
        grid-template-columns: 1fr;
    }
    @media (min-width: 576px) {
        .content-wrapper {
            grid-template-columns: 2fr .75fr;
        }
    }
</style>